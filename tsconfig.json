{
  "compilerOptions": {
    "outDir": "dist", 
    "target": "es2018", 
    "module": "commonjs", 
    "baseUrl": ".", /* Base directory to resolve non-absolute module names. */
    "paths": {
      "~/*": [
        "./src/*",
      ],
      "~components/*": [
        "./src/front/components/*"
      ]
    },
    "lib": [
      "es2017",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "strict": true,
    "esModuleInterop": true, 
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
  },
  "include": [
    "src"
  ]
}